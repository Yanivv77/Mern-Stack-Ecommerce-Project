{
  "name": "yaniv-shop",
  "version": "1.0.0",
  "description": "Mern Project",
  "main": "server.js",
  "engines": {
    "node": "v18.12.1"
  },
  "scripts": {
    "start": "ts-node src/config/server.js",
    "server": "ts-node backend/server",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node backend/seeder",
    "data:destroy": "node backend/seeder -d",
    "test": "jest --forceExit --detectOpenHandles  --watchAll --maxWorkers=1",
    "tsc": "tsc",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yanivv77/Mern-Stack-Ecommerce-Project.git"
  },
  "author": "Yaniv",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Yanivv77/Mern-Stack-Ecommerce-Project/issues"
  },
  "homepage": "https://github.com/Yanivv77/Mern-Stack-Ecommerce-Project#readme",
  "dependencies": {
    "@colors/colors": "^1.5.0",
    "@types/jest": "^29.2.4",
    "babel-jest": "^29.3.1",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "concurrently": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb-memory-server": "^8.10.2",
    "mongoose": "^6.8.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "winston": "^3.8.2",
    "winston-mongodb": "^5.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.15",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.17",
    "jest": "^29.3.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4"
  },
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  }
